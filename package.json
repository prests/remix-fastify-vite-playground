{
  "name": "remix-fastify-vite-playground",
  "private": true,
  "type": "module",
  "scripts": {
    "____ RUN COMMANDS ___": "",
    "start": "cross-env NODE_ENV=production HOST=0.0.0.0 ABORT_DELAY=5000 node ./build/server.js --max-http-header-size 50000",
    "dev": "pnpm run build && pnpm run dev:start",
    "dev:start": "cross-env HTTPS=true HOST=local.example-test.com NODE_ENV=development dotenvx run -- nodemon ./build/server.js --watch ./build/server.js",
    "____ BUILD COMMANDS ____": "",
    "build": "pnpm run clean:build && pnpm run build:remix && pnpm run build:server",
    "build:remix": "remix vite:build",
    "build:server": "tsc --project ./tsconfig.fastify.json",
    "____ TEST COMMANDS ____": "",
    "test:ci": "pnpm run clean:test && pnpm run test",
    "test": "vitest --coverage=false --watch=false",
    "test:coverage": "pnpm run clean:test && vitest run --coverage",
    "test:visual": "pnpm run clean:test && vitest --ui",
    "test:watch": "pnpm run clean:test && vitest watch --coverage=false",
    "test:watchcoverage": "pnpm run clean:test && vitest watch --coverage",
    "____ CLEAN COMMANDS ____": "",
    "clean": "pnpm run clean:build && pnpm run clean:test",
    "clean:build": "pnpm run clean:browser && pnpm run clean:server",
    "clean:browser": "rimraf public/build",
    "clean:server": "rimraf build",
    "clean:test": "rimraf ./coverage",
    "____ LINTING/FORMATTING COMMANDS ____": "",
    "format": "prettier --ignore-path .gitignore --write .",
    "format:verify": "prettier --list-different --ignore-path .gitignore .",
    "lint": "eslint --ignore-path .gitignore --no-error-on-unmatched-pattern --max-warnings=0 .",
    "lint:fix": "eslint --ignore-path .gitignore --no-error-on-unmatched-pattern --max-warnings=0 --fix .",
    "typecheck": "tsc",
    "____ LIFECYCLE COMMANDS ____": "",
    "generate-cert": "./scripts/generate-dev-cert.sh",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "git config core.hooksPath ./git-hooks"
  },
  "dependencies": {
    "@fastify/helmet": "^11.1.1",
    "@fastify/middie": "^8.3.0",
    "@fastify/static": "^7.0.1",
    "@mcansh/remix-fastify": "3.2.2",
    "@remix-run/node": "^2.8.1",
    "cross-env": "^7.0.3",
    "fastify": "^4.26.1",
    "isbot": "^5.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^0.25.1",
    "@remix-run/dev": "^2.8.1",
    "@remix-run/eslint-config": "^2.8.1",
    "@remix-run/react": "^2.8.1",
    "@remix-run/testing": "^2.8.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "crossenv": "0.0.2-security",
    "eslint": "^8.57.0",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "pino-pretty": "^10.3.1",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.4.0",
    "vitest-axe": "^0.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
